<h2>COURSE</h2>

<br />
<!-- Check record count -->

<!-- Display records -->
Course : <%= @rec_course_section.course.course_name %>
Section : <%= @rec_course_section.course.sections.map {|s| s.section_name} %>
<br />

<table  style="width:50%; border:0px solid #000" cellspacing=0 cellpadding=0>
  <tr><td colspan="2"></td>
    <td style="width:29%;text-align: right;"><%= link_to "Relate Section", new_section_path %></td></tr>

  <tr style="width:100%; border:1px solid #000">
    <td style="width:10%; border:1px solid #000">#</td>
    <td  style="width:60%; border:1px solid #000">Related Sections</td>
    <td  style="width:29%;text-align: right;border:1px solid #000">Action</td>
  </tr>
  <% @@i=0 %>
  <% @course.course_sections.each do |section| %>

      <tr style="width:100%; border:1px solid #000">
        <td style="width:19%; border:1px solid #000"><%= @@i=@@i+1 %></td>
        <td  style="width:60%; border:1px solid #000"><%= section.section.section_name%></td>
        <td  style="width:29%;text-align: right;border:1px solid #000">
         |
          <%= link_to "Delete", section, :confirm => "Are you sure?", :method => :delete  %>
        </td>
      </tr>
  <% end %>

  <tr>
    <td colspan="2">
      Total number of data is:
    </td>
    <td style="width:29%;text-align: right;"><%= link_to "Add new Section", new_section_path %></td></tr>

</table>

<%= hidden_field_tag(:id, @course.id) %>
