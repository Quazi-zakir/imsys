<h2>COURSE</h2>

<br />
<!-- Check record count -->

<!-- Display records -->
<table  style="width:100%; border:0px solid #000" cellspacing=0 cellpadding=0>
  <tr><td colspan="2">List all courses</td>
    <td style="width:29%;text-align: right;"><%= link_to "Add new Course", new_course_path %></td></tr>

  <tr style="width:100%; border:1px solid #000">
    <td style="width:10%; border:1px solid #000">#</td>
    <td  style="width:60%; border:1px solid #000">Course</td>
    <td  style="width:29%;text-align: right;border:1px solid #000">Action</td>
  </tr>
  <% if @courses.count.zero? %>
      <tr><td colspan="3" style="text-align: center;;border:1px solid #000;">No Data Found!</td></tr>
  <% else %>
      <% @@i=0 %>
      <% @courses.each do |course| %>
          <tr style="width:100%; border:1px solid #000">
            <td style="width:19%; border:1px solid #000"><%= @@i=@@i+1 %></td>
            <td  style="width:60%; border:1px solid #000"><%= course.course_name %></td>
            <td  style="width:29%;text-align: right;border:1px solid #000">
              <%= link_to "Edit", edit_course_path(course)  %> |
              <%= link_to "Delete", course, :confirm => "Are you sure?", :method => :delete  %>
            </td>
          </tr>

      <% end %>

  <% end %>

  <tr>
    <td colspan="2">
      Total number of data is: <%= @courses.count %>
    </td>
    <td style="width:29%;text-align: right;"><%= link_to "Add new Course", new_course_path %></td></tr>


</table>
